{
  "name": "Chrome Extention for Startup News",
  "description": "This extension adds an icon to the toolbar which allows you to share the page link to Startup News.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "64": "icon_64x64.png" },
  "options_page": "options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_title": "Share to Startup News",
    "default_icon": "icon_16x16.png"
  },

  "manifest_version": 2
}